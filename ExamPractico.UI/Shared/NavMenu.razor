<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ExamPractico.UI</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                <span class="oi oi-person" aria-hidden="true"></span> Clientes
            </NavLink>
            @if (expandSubNav)
            {
                <NavLink class="nav-link" href="/listaclientes" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Listado de Clientes
                </NavLink>
                <NavLink class="nav-link" href="/detallecliente" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Agregar Clientes
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav2 = !expandSubNav2">
                <span class="oi oi-tags" aria-hidden="true"></span> Articulos
            </NavLink>
            @if (expandSubNav2)
            {
                <NavLink class="nav-link" href="/listadepa" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Listado de Dep.
                </NavLink>
                <NavLink class="nav-link" href="/agregardepa" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Agregar Dep.
                </NavLink>
                <NavLink class="nav-link" href="/listaprov" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Proveedores
                </NavLink>
                <NavLink class="nav-link" href="/agregaprov" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Agregar Prov.
                </NavLink>
                <NavLink class="nav-link" href="listaarticulos" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Articulos
                </NavLink>
                <NavLink class="nav-link" href="agregararticulos" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Agregar Articulo
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="#" Match="NavLinkMatch.All">
                <span class="oi oi-wrench" aria-hidden="true"></span> Configuración
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav3 = !expandSubNav3">
                <span class="oi oi-dollar" aria-hidden="true"></span> Ventas
            </NavLink>
            @if (expandSubNav3)
            {
                <NavLink class="nav-link" href="/ventas" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Ventas
                </NavLink>
                <NavLink class="nav-link" href="/listaventas" Match="NavLinkMatch.All">
                    &nbsp;&nbsp;&nbsp;<span class="oi oi-media-record" aria-hidden="true"></span> Listado de Ventas
                </NavLink>
            }
        </li>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        collapseNavMenu2 = !collapseNavMenu2;
        collapseNavMenu3 = !collapseNavMenu3;
    }

    private bool expandSubNav;


    private bool collapseNavMenu2 = true;

    private string NavMenuCssClass2 => collapseNavMenu2 ? "collapse" : null;

    private bool expandSubNav2;


    private bool collapseNavMenu3 = true;

    private string NavMenuCssClass3 => collapseNavMenu3 ? "collapse" : null;

    private bool expandSubNav3;
}
